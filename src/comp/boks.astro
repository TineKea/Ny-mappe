---
const h2 = Astro.props.h2;
const text1 = Astro.props.text1;
const text2 = Astro.props.text2;
const text3 = Astro.props.text3;
---

<div class="boks">
    <div class="boks_header">
        <h2>{h2}</h2>
    </div>
    <div class="boks_items">
        <p>
            {text1}
        </p>
    </div>
    <div class="boks_items">
        <p>
            {text2}
        </p>
    </div>
    <div class="boks_items">
        <p>
            {text3}
        </p>
    </div>
    
    
    
    
</div>

<style>
    .boks {
        display: flex;
        justify-content: center;
        flex-direction: column;
        padding: 5%;
        margin: 10%;
        background-color: rgba(55, 63, 100, 0.65);
    border-radius: 20px;
    }

    @media screen and (max-width: 600px) {
  .boks {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .boks_items {
    display: flex;
    flex-direction: column;
    max-width: 100%;
width: 110px;
  height: 100px;
  }

  .boks_header {
    width: 10px;
  }

</style>

